{
  "$jason": {
    "head": {
      "title": "Inspark IoT",
      "description": "Inspark IoT platform app",
      "actions": {
        "$load": {
          "type": "$agent.inject",
          "options": {
            "id": "$webcontainer",
            "items": [
              {
                "url": "https://opmind.github.io/mobile-app/native.js"
              }
            ]
          }
        },
        "$load": {
          "type": "$render"
        },
        "visit": [
          {
            "{{#if /\\/(dashboard|eventslog|charts|map)$/.test($jason.url) }}": {
              "type": "$href",
              "options": {
                "url": "https://opmind.github.io/mobile-app/main.json",
                "preload": {
                  "background": "#ffffff"
                },
                "options": {
                  "url": "{{$jason.url}}"
                },
                "transition": "modal"
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$href",
              "options": {
                "url": "https://opmind.github.io/mobile-app/dashboard.json",
                "preload": {
                  "background": "#ffffff"
                },
                "transition": "modal",
                "options": {
                  "url": "{{$jason.url}}"
                }
              }
            }
          }
        ]
      },
      "templates": {
        "body": {
          "header": {
            "title": "Inspark IoT"
          },
          "background": {
            "type": "html",
            "url": "{{'url' in $params ? $params.url : 'https://semnext.inspark.ru/semux/#!/main/'}}",
            "action": {
              "trigger": "visit"
            }
          }
        }
      }
    }
  }
}
